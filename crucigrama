def obtener_opcion_menu():
    opcion = int(input("Ingrese una opciÃ³n del menÃº (1, 0): "))
    while opcion != 1 and opcion != 0:
        termcolor.cprint("OpciÃ³n invÃ¡lida. Intente nuevamente.", "red")
        opcion = int (input(termcolor.colored("Ingrese una opciÃ³n del menÃº (1, 0): ", attrs=["bold"])))
    return opcion


